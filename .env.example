# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Minneapolis Community of Christ"

# Contact Information
NEXT_PUBLIC_CHURCH_EMAIL=info@minneapoliscofchrist.org
NEXT_PUBLIC_CHURCH_PHONE=(612) 555-1234
NEXT_PUBLIC_CHURCH_ADDRESS=123 Main Street, Minneapolis, MN 55401

# Map Configuration
NEXT_PUBLIC_MAP_LAT=44.9778
NEXT_PUBLIC_MAP_LNG=-93.2650

# Google Maps (Optional - for future integration)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_api_key_here

# Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sanity CMS Configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_api_token

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_generate_with_openssl_rand_base64_32

# Google OAuth (for member sign-in)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@minneapoliscofchrist.org

# Stripe Payment Gateway
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Database (Optional - for future member data storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/church_db

# YouTube Integration (Optional - for live streaming)
# NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key
# NEXT_PUBLIC_YOUTUBE_CHANNEL_ID=your_youtube_channel_id

# Vimeo Integration (Optional - for video content)
# NEXT_PUBLIC_VIMEO_ACCESS_TOKEN=your_vimeo_access_token
# NEXT_PUBLIC_VIMEO_USER_ID=your_vimeo_user_id

# API Mocking (for static deployment)
NEXT_PUBLIC_API_MOCK=true
